<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MachineTask" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="snackBarStyle">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="snackBarActionStyle">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>